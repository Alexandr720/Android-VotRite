<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:id="@+id/item_candidate_race">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_candidateRace"
            android:layout_width="36dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_candidateName"
            android:layout_toEndOf="@+id/tv_candidateRace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="110dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:gravity="end">

            <ImageView
                android:id="@+id/iv_partyLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_logo"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/iv_candidatePhoto"
                android:layout_toEndOf="@+id/iv_partyLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_logo"
                android:contentDescription="@string/todo" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>